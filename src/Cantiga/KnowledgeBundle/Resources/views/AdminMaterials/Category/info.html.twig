{% extends 'CantigaCoreBundle:layout:base-layout.html.twig' %}

{% block page_title %}
    {{ 'admin.materials_categories.title' | trans }}
{% endblock %}

{% block page_subtitle %}
    {{ 'admin.materials_categories.subtitle' | trans }}
{% endblock %}

{% block page_content %}
    <div class="row">
        <div class="col-xs-12">
            <div class="box box-danger">
                <div class="box-header with-border">
                    <i class="fa fa-lightbulb-o"></i>
                    <h3 class="box-title">{{ 'admin.materials_categories.info' | trans }}</h3>
                </div>
                <div class="box-body no-padding">
                    <table class="table table-hover">
                        <tbody>
                            <tr>
                                <td width="30%">{{ 'admin.materials.name' | trans }}</td>
                                <td>{{ item.name }}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="box-footer">
                    <a href="{{ path('admin_materials_category_index') }}" class="btn btn-default btn-sm" role="button">
                        {{ 'admin.back' | trans }}
                    </a>
                    <a href="{{ path('admin_materials_category_edit', { id: item.id }) }}"
                        class="btn btn-primary btn-sm" role="button">
                        {{ 'admin.edit' | trans }}
                    </a>
                    <a href="{{ path('admin_materials_file_index', { categoryId: item.id }) }}"
                        class="btn btn-danger btn-sm" role="button">
                        {{ 'admin.materials.files' | trans }}
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
