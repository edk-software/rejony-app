{% extends 'CantigaCoreBundle:layout:base-layout.html.twig' %}

{% block page_title %}
    {{ 'admin.materials_files.title' | trans }}
{% endblock %}

{% block page_subtitle %}
    {{ 'admin.materials_files.subtitle' | trans }}
{% endblock %}

{% block page_content %}
    <div class="row">
        <div class="col-xs-12">
            <div class="box box-danger">
                <div class="box-header with-border">
                    <i class="fa fa-lightbulb-o"></i>
                    <h3 class="box-title">{{ 'admin.materials_files.info' | trans }}</h3>
                </div>
                <div class="box-body no-padding">
                    <table class="table table-hover">
                        <tbody>
                            <tr>
                                <td width="30%">{{ 'admin.materials.category' | trans }}</td>
                                <td>
                                    <a href="{{ path('admin_materials_category_info', { id: item.category.id }) }}">
                                        {{ item.category.name }}
                                    </a>
                                </td>
                            </tr>
                            <tr>
                                <td width="30%">{{ 'admin.materials.name' | trans }}</td>
                                <td>{{ item.name }}</td>
                            </tr>
                            <tr>
                                <td width="30%">{{ 'admin.materials.description' | trans }}</td>
                                <td>{{ item.description | raw }}</td>
                            </tr>
                            <tr>
                                <td width="30%">{{ 'admin.materials.file' | trans }}</td>
                                <td><a href="{{ path('admin_materials_file_get', { categoryId: item.category.id,
                                    id: item.id }) }}" target="_blank">{{ item.path | file_name }}</a></td>
                            </tr>
                            <tr>
                                <td width="30%">{{ 'admin.level' | trans }}</td>
                                <td>{{ levels[item.level] is defined ? levels[item.level] | trans : item.level }}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="box-footer">
                    <a href="{{ path('admin_materials_file_index', { categoryId: categoryId }) }}"
                        class="btn btn-default btn-sm" role="button">
                        {{ 'admin.back' | trans }}
                    </a>
                    <a href="{{ path('admin_materials_file_edit', { categoryId: categoryId, id: item.id }) }}"
                       class="btn btn-primary btn-sm" role="button">
                        {{ 'admin.edit' | trans }}
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
