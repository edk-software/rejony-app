{% extends 'CantigaCoreBundle:layout:base-layout.html.twig' %}

{% block page_title %}
    {{ 'admin.materials_files.title' | trans }}
{% endblock %}

{% block page_subtitle %}
    {{ 'admin.materials_files.subtitle' | trans }}
{% endblock %}

{% block page_content %}
    <div class="row">
        <div class="col-xs-12">
            <div class="box box-danger">
                {{ form_start(form) }}
                    <div class="box-header with-border">
                        <i class="fa fa-lightbulb-o"></i>
                        <h3 class="box-title">{{ form_title }}</h3>
                    </div>
                    <div class="box-body">
                        <div class="row">
                            <div class="col-lg-6 col-md-12">
                                {{ form_row(form.category) }}
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6 col-md-12">
                                {{ form_row(form.name) }}
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6 col-md-12">
                                {{ form_row(form.description, { attr: { rows: 10 } }) }}
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6 col-md-12">
                                {% if item.id %}
                                    <div class="form-group">
                                        <div style="font-weight:700;margin:0 0 5px">
                                            {{ 'admin.materials.file' | trans }}
                                        </div>
                                        <div style="padding:4px 13px">
                                            <a href="{{ path('admin_materials_file_get', { categoryId: item.category.id,
                                                id: item.id }) }}" target="_blank">{{ item.path | file_name }}</a>
                                        </div>
                                    </div>
                                {% else %}
                                    {{ form_row(form.path) }}
                                {% endif %}
                            </div>
                        </div>
                        {% if not item.id %}
                            <div class="row">
                                <div class="col-lg-6 col-md-12">
                                    {{ form_row(form.url) }}
                                </div>
                            </div>
                        {% endif %}
                        <div class="row">
                            <div class="col-lg-6 col-md-12">
                                {{ form_row(form.level) }}
                            </div>
                        </div>
                    </div>
                    <div class="box-footer">
                        <a href="{{ path('admin_materials_file_index', { categoryId: categoryId }) }}"
                            class="btn btn-default btn-sm" role="button">
                            {{ 'admin.back' | trans }}
                        </a>
                        {{ form_widget(form.save) }}
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts_inline %}
    {{ use_icheck() }}
{% endblock %}
