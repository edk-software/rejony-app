{% extends 'CantigaCoreBundle:layout:base-layout.html.twig' %}

{% block page_title %}
    {{ 'admin.faq_questions.title' | trans }}
{% endblock %}

{% block page_subtitle %}
    {{ 'admin.faq_questions.subtitle' | trans }}
{% endblock %}

{% block page_content %}
    <div class="row">
        <div class="col-xs-12">
            <div class="box box-danger">
                {{ form_start(form) }}
                    <div class="box-header with-border">
                        <i class="fa fa-lightbulb-o"></i>
                        <h3 class="box-title">{{ form_title }}</h3>
                    </div>
                    <div class="box-body">
                        <div class="row">
                            <div class="col-lg-6 col-md-12">
                                {{ form_row(form.category) }}
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6 col-md-12">
                                {{ form_row(form.topic) }}
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6 col-md-12">
                                {{ form_row(form.answer, { attr: { rows: 10 } }) }}
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6 col-md-12">
                                {{ form_row(form.level) }}
                            </div>
                        </div>
                    </div>
                    <div class="box-footer">
                        <a href="{{ path('admin_faq_question_index', { categoryId: categoryId }) }}"
                            class="btn btn-default btn-sm" role="button">
                            {{ 'admin.back' | trans }}
                        </a>
                        {{ form_widget(form.save) }}
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts_inline %}
    {{ use_icheck() }}
{% endblock %}
