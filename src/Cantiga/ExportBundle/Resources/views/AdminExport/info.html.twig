{% extends 'CantigaCoreBundle:layout:common-layout.html.twig' %}

{% block box_header %}
	<h4>{{ 'Details: 0' | trans([item.name], 'general') }}</h4>
{% endblock %}

{% block box_body %}
<table class="table table-hover">
	<tbody>
		<tr>
			<td width="30%">{{ 'Name' | trans([], 'export') }}</td>
			<td>{{ item.name }}</td>
		</tr>
		<tr>
			<td width="30%">{{ 'Project' | trans([], 'export') }}</td>
			<td><a href="{{ path('admin_project_info', {'id': item.project.id})}}">{{ item.project.name }}</a></td>
		</tr>
		<tr>
			<td width="30%">{{ 'Area status' | trans([], 'export') }}</td>
			<td>{{ item.areaStatus.name | trans([], 'statuses') }}</td>
		</tr>
		<tr>
			<td width="30%">{{ 'Export URL' | trans([], 'export') }}</td>
			<td>{{ item.url }}</td>
		</tr>
		<tr>
			<td width="30%">{{ 'Encryption key' | trans([], 'export') }}</td>
			<td>{{ item.encryptionKey }}</td>
		</tr>
		<tr>
			<td width="30%">{{ 'Active' | trans([], 'export') }}</td>
			<td>{{ boolean_mark(item.active) }}</td>
		</tr>
		<tr>
			<td width="30%">{{ 'Notes' | trans([], 'export') }}</td>
			<td>{{ item.notes }}</td>
		</tr>
	</tbody>
</table>
{% endblock %}

{% block box_footer %}
<p>
	<a href="{{ spath(indexPage) }}" class="btn btn-default btn-sm" role="button">{{ 'Back' | trans({}, 'general') }}</a>
	<a href="{{ spath(editPage, {'id': item.id }) }}" class="btn btn-warning btn-sm" role="button">{{ 'Edit' | trans({}, 'general') }}</a>
	{% if item.canRemove() %}
	<a href="{{ spath(removePage, {'id': item.id }) }}" class="btn btn-danger btn-sm" role="button">{{ 'Remove' | trans({}, 'general') }}</a>
	{% endif %}
</p>
{% endblock %}