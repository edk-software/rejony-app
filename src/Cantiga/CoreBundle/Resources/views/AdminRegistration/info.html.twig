{% extends 'CantigaCoreBundle:layout:common-layout.html.twig' %}

{% block box_header %}
	<h4>{{ 'Details: 0' | trans([item.name], 'general') }}</h4>
{% endblock %}

{% block box_body %}
<table class="table table-hover">
	<tbody>
		<tr>
			<td width="30%">{{ 'Name' | trans }}</td>
			<td>{{ item.name }}</td>
		</tr>
		<tr>
			<td width="30%">{{ 'Login' | trans }}</td>
			<td>{{ item.login }}</td>
		</tr>
		<tr>
			<td width="30%">{{ 'E-mail' | trans }}</td>
			<td><a href="mailto:{{ item.email }}">{{ item.email }}</a></td>
		</tr>
		<tr>
			<td width="30%">{{ 'Registered at' | trans }}</td>
			<td>{{ format_time(TimeFormatter.FORMAT_SHORT, item.requestTime) }} ({{ ago(item.requestTime) }})</td>
		</tr>
		<tr>
			<td width="30%">{{ 'IP address' | trans }}</td>
			<td>{{ item.getFormattedRequestIp() }}</td>
		</tr>
	</tbody>
</table>
{% endblock %}

{% block box_footer %}
<p>
	<a href="{{ path('admin_registration_index') }}" class="btn btn-default btn-sm" role="button">{{ 'Back' | trans({}, 'general') }}</a>
	<a href="{{ path('admin_registration_remove', {'id': item.id }) }}" class="btn btn-danger btn-sm" role="button">{{ 'Remove' | trans({}, 'general') }}</a>
</p>
{% endblock %}
