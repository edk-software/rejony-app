<div class="col-lg-12">
	<div class="box box-primary">
		<div class="box-header with-border">
			<i class="fa fa-flag"></i>
			<h3 class="box-title">{{ 'Recent area requests' | trans }}</h3>
		</div>
		<!-- /.box-header -->
		<div class="box-body">
			<ul class="products-list product-list-in-box">
                {% for request in requests %}
					<li class="item">
						<div class="product-img">
							<img src="{{ asset(avatar(request, 32)) }}" alt="{{ request.username }}">
						</div>
						<div class="product-info">
							<a href="{{ spath('project_area_request_info', {'id': request.id} ) }}" class="product-title">{{ request.name }}
								<span class="label label-{{request.statusLabel}} pull-right">{{ request.statusText | trans([], 'statuses') }}</span></a>
							<span class="product-description">
							  {{ ago(request.createdAt) }}
							</span>
						</div>
					</li>
                {% endfor %}
			</ul>
		</div>
		<!-- /.box-body -->
	</div>
</div>