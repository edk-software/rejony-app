{% extends 'CantigaCoreBundle:layout:base-layout.html.twig' %}

{% block page_title %}
    {{ 'Magic buttons' | trans([], 'pages') }}
{% endblock %}

{% block page_subtitle %}
    {{ 'They give you the fast access to the most commonly used data and actions' | trans([], 'pages') }}
{% endblock %}

{% block page_content %}
    <div class="col-md-offset-3 col-md-6 col-xs-12">
        <div class="box box-solid">
            <div class="box-body">
                {% for button, svc in buttons %}
                    <a href="{{ spath('project_buttons_activate', {'button': svc }) }}"
                       class="btn btn-lg btn-primary btn-flat btn-block">{{ button | trans }}</a>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
