<li class="dropdown projects-menu">
	<a href="#" class="dropdown-toggle" data-toggle="dropdown">
		<i class="fa fa-exchange"></i> <span>{{ active }}</span>
	</a>
	<ul class="dropdown-menu">
		<li class="header">{{ 'Your workspaces' |trans }}</li>
		{% for workspace in workspaces %}
			{% if not workspace.hidden %}
			<li><a href="{{ path(workspace.homePage) }}">{{ workspace.title | trans({}, 'pages') }}</a></li>
			{% endif %}
		{% endfor %}
		{% if hasProjects %}
		<li class="header">{{ 'You are a member of:' |trans }}</li>
			{% for project in projects %}
				{% if not project.archived %}
				<li><a href="{{ path('place_dashboard', {slug: project.slug }) }}">{{ (project.type~'Nominative: 0') | trans([ project.name ]) }}</a></li>
				{% endif %}
			{% endfor %}
		{% endif %}
		{% if showArchives %}
		<li class="footer"><a href="{{ path('user_archive') }}">{{ 'Archive' | trans([], 'pages') }}</a></li>
		{% endif %}
	</ul>
</li>