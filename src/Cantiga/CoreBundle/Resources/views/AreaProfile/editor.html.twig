{% extends 'CantigaCoreBundle:layout:base-layout.html.twig' %}

{% block page_title %}
    {{ 'Profile editor' | trans([], 'pages') }}
{% endblock %}

{% block page_subtitle %}
    {{ 'Edit the details of your area' | trans([], 'pages') }}
{% endblock %}

{% block page_content %}
    <div class="row">
        <div class="col-lg-6 col-md-12 col-lg-offset-3 col-md-offset-0">
            <div class="box box-purple">
                {{ form_start(form) }}
                {% if text %}
                    <div class="box-header with-border">
                        {{ text.content | raw }}
                    </div>
                {% endif %}
                <div class="box-body">
                    <div class="progress active">
                        <div class="progress-bar progress-bar-{{ progressBarColor }}" role="progressbar"
                             aria-valuenow="{{ percentCompleteness }}" aria-valuemin="0" aria-valuemax="100"
                             style="width: {{ percentCompleteness }}%">
                            <span class="sr-only">{{ percentCompleteness }}%</span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-xs-12">
                            {{ form_row(form.name) }}
                        </div>
                        <div class="col-xs-12">
                            {{ form_row(form.eventDate) }}
                        </div>

                        <div class="col-xs-12">
                            {{ form_row(form.territory) }}
                        </div>
                        <div class="col-md-6 col-xs-12">
                            {{ form_row(form.lat) }}
                        </div>
                        <div class="col-md-6 col-xs-12">
                            {{ form_row(form.lng) }}
                        </div>
                    </div>
                    {% include formRenderer.template with { 'formRenderer': formRenderer, 'form': form } only %}
                </div>
                <div class="box-footer">
                    {{ form_widget(form.save) }}
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}