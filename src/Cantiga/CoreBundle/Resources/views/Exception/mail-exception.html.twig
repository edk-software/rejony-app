{% extends 'CantigaCoreBundle:layout:base-layout.html.twig' %}

{% block page_title %}
Error
{% endblock %}

{% block page_content %}
	<div class="error-page">
		<h2 class="headline text-red">501</h2>

        <div class="error-content">
			<h3><i class="fa fa-warning text-red"></i> Oops! Can't send e-mail</h3>

			<p>There is something wrong with sending an e-mail from the system. Please check that:</p>
			
			<ul>
				<li>there is an appropriate e-mail template for the currently selected language,</li>
				<li>if the template is correct.</li>
			</ul>
			
			<p>In any case, please contact the administrators and inform them about the problem.</p>
        </div>
	</div>
{% endblock %}