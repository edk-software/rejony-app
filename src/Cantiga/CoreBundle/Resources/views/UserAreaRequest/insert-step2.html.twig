{% extends 'CantigaCoreBundle:layout:base-layout.html.twig' %}

{% block page_title %}
    {{ 'Request a new area' | trans([], 'pages') }}
{% endblock %}

{% block page_content %}
    <div class="row">
        {% include 'CantigaCoreBundle:UserAreaRequest:insert-steps.html.twig' with { currentStep: 2, disablePrevious: false, projectId: project.id } %}
    </div>
    <div class="row">
        <div class="col-lg-6 col-md-12 col-lg-offset-3 col-md-offset-0">
            <div class="box box-success">
                {{ form_start(form) }}
                <div class="box-header with-border">
                    <i class="fa fa-info"></i>
                    <h3 class="box-title">{{ 'ProvideAreaInfoText' | trans([], 'requests') }}</h3>
                </div>
                <div class="box-body">
                    <div class="col-sm-12">
                        {{ text.content | raw }}
                        <hr/>
                        <div class="row">
                            <div class="col-xs-12">
                                {{ form_row(form.name) }}
                            </div>
                            <div class="col-xs-12">

                                {{ form_row(form.territory) }}
                            </div>

                            <div class="col-xs-12">
                                <span id="search" class="btn btn-success btn-sm"><i
                                            class="fa fa-search"></i> {{ 'SearchInMap' | trans([], 'public') }}</span>
                                <span class="help-block">{{ 'MapPinHelp' | trans([], 'public') }}</span>
                                <div id="map-canvas" style="height:400px;width:100%"></div>
                                <div class="col-md-6 col-xs-12 no-padding">
                                    {{ form_row(form.lat) }}
                                </div>
                                <div class="col-md-6 col-xs-12 no-padding">
                                    {{ form_row(form.lng) }}
                                </div>
                            </div>
                        </div>
                        {% include formRenderer.template with { 'formRenderer': formRenderer, 'form': form } only %}
                    </div>
                </div>
                <div class="box-footer">
                    <div class="pull-right">{{ form_widget(form.save) }}</div>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ map.olCssUrl }}"/>
{% endblock %}

{% block javascripts_inline %}
    {{ use_icheck() }}
    <script src="{{ map.gmJsUrl }}"></script>
    <script src="{{ map.olJsUrl }}"></script>
    <script src="{{ asset('js/maps.js') }}"></script>
    <script>
        maps.renderCoordsFetcher(
            'map-canvas', [0, 0], jQuery('#user_area_request_form_lat'), jQuery('#user_area_request_form_lng'),
            jQuery('#user_area_request_form_name'), jQuery('#search')
        );
    </script>
{% endblock %}
