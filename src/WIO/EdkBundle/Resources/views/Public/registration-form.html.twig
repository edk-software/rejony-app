{% extends 'WioEdkBundle:Public:public-form.html.twig' %}

{% block title %}{{ 'Register page' | trans([], 'public') }} - {{ 'Extreme Way of the Cross' | trans([], 'public') }}{% endblock %}

{% block form_title %}
    <h1>{{ 'Register to Extreme Way of the Cross' | trans([], 'public') }}</h1>
{% endblock %}

{% block form_header %}
    {{ text.content | raw }}
{% endblock %}

{% block form_content %}
    <fieldset>
        <legend>{{ 'About you' | trans([], 'public') }}</legend>
        {{ form_row(form.firstName) }}
        {{ form_row(form.lastName) }}
        {{ form_row(form.email) }}
    </fieldset>
    <fieldset>
        <hr>
        {{ form_row(form.age) }}
        {{ form_row(form.whereLearnt, {'id': 'where-learnt'}) }}
        {{ form_row(form.howManyTimes) }}
        {{ form_row(form.whyParticipate, {'id': 'why-participate'}) }}
        {{ form_row(form.customAnswer, {'id': 'custom-answer'}) }}
    </fieldset>
{% endblock %}

{% block form_footer %}
    <fieldset>
        <div class="col-lg-12">
            <legend>{{ 'Legal issues' | trans([], 'public') }}</legend>
            {{ form_row(form.terms1Accepted) }}
            {{ form_row(form.terms2Accepted) }}
            {{ form_row(form.terms3Accepted) }}
        </div>
        <div class="col-lg-12">
            {{ recaptcha.generateHtmlCode() | raw }}
        </div>
    </fieldset>
{% endblock %}

{% block form_info %}
    <small>{{ personalDataInfo | raw }}</small>
{% endblock %}
