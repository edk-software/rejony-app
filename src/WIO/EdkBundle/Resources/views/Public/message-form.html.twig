{% extends 'WioEdkBundle:Public:layout.html.twig' %}

{% block title %}{{ 'Write to area' | trans([], 'public') }} - {{ 'Extreme Way of the Cross' | trans([], 'public') }}{% endblock %}

{% block page_content %}
	<section class="main container">
		<div class="col-md-12 content center"><h1>{{ 'Write to area' | trans([], 'public') }}</h1></div>
	</section>
	
	{{ form_start(form) }}
	<div class="row">
		<div class="col-lg-6 col-md-12">
			{{ form_row(form.subject) }}
			{{ form_row(form.content) }}
			
		</div>
		<div class="col-lg-6 col-md-12">
			{{ form_row(form.area) }}
			{{ form_row(form.authorName) }}
			<fieldset>
				<legend>{{ 'Contact' | trans([], 'public') }}</legend>
				<p>{{ 'Please leave either an e-mail, so that we could answer you.' | trans([], 'public') }}</p>
				{{ form_row(form.authorEmail) }}
				{#{{ form_row(form.authorPhone) }}#}
			</fieldset>
			<fieldset>
				<div class="col-lg-12">
					<legend>{{ 'Legal issues' | trans([], 'public') }}</legend>
					{{ form_row(form.terms1Accepted) }}
					{{ form_row(form.terms2Accepted) }}
				</div>
				<div class="col-lg-12">
					{{ recaptcha.generateHtmlCode() | raw }}
				</div>
			</fieldset>
			
		</div>
	</div>
	<div class="col-lg-12">
		{{ form_row(form.save) }}
	</div>
	{{ form_end(form) }}
	<small>{{ personalDataInfo | raw }}</small>
{% endblock %}

{% block javascripts_head %}
	<script src="{{ recaptcha_api_url }}"></script>
{% endblock %}
