<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}{{ 'Extreme Way of the Cross' | trans([], 'public') }}{% endblock %}</title>

    {% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}" />
`    <link rel="stylesheet" href="{{ asset('css/font-awesome.min.css') }}" />
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,300,600,700&subset=latin,latin-ext' rel='stylesheet' type='text/css'>

    <link rel="stylesheet" href="{{ asset('css/style-edk.css') }}">
    <link rel="stylesheet" href="{{ asset('css/public.min.css') }}" />
    {% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset(Branding.LOGO_FILE) }}" />
    {%  block javascripts_head %}
    {% endblock %}
  </head>
  <body>
	  <header>
		  <div class="container">
			  <div class="logo col-md-4">
				  <a href="http://www.edk.org.pl/"><img src="{{ asset('img/edk/logo.png') }}" alt=""></a>
			  </div>

			  <div class="menu col-md-8">
				  <ul class="list-inline">
					  {% if slug is defined %}
					  <li><a href="{{ path('public_edk_register', {'slug': slug }) }}">{{ 'Register page' | trans([], 'public' ) }}</a></li>
					  <li><a href="{{ path('public_edk_write_msg', {'slug': slug }) }}">{{ 'Contact with area' | trans([], 'public' ) }}</a></li>
					  <li><a href="{{ path('public_edk_check', {'slug': slug }) }}">{{ 'Check registration' | trans([], 'public' ) }}</a></li>
					  {% endif %}
				  </ul>
			  </div>
		  </div>
	  </header>
	  <section class="banner-top" style="background-image:url({{ asset('img/edk/edk-droga-sepia.jpg') }}); background-color:#272727; background-position:center;"></section>
	{% include 'CantigaCoreBundle:layout:flash.html.twig' %}
	<div class="container" style="margin-bottom: 20px">
		{% if slug is defined %}
		<div class="col-lg-2 col-lg-offset-10" style="margin-top: 10px; margin-bottom: 10px; text-align: right;">
			<a href="{{ path(currentPage, {'slug': slug, '_locale': 'pl'}) }}">PL</a>
			<a href="{{ path(currentPage, {'slug': slug, '_locale': 'en'}) }}">EN</a>
			<a href="{{ path(currentPage, {'slug': slug, '_locale': 'es'}) }}">ES</a>
		</div>
		{% endif %}
		{% block page_content %}
		{% endblock %}
	</div>
	
	<footer>
		<div class="container">
			<div class="col-md-2 bottom-menu">
				<ul class="list-unstyled">
					{% if slug is defined %}
					<li><a href="{{ path('public_edk_register', {'slug': slug }) }}">{{ 'Register page' | trans([], 'public' ) }}</a></li>
					<li><a href="{{ path('public_edk_write_msg', {'slug': slug }) }}">{{ 'Contact with area' | trans([], 'public' ) }}</a></li>
					<li><a href="{{ path('public_edk_check', {'slug': slug }) }}">{{ 'Check registration' | trans([], 'public' ) }}</a></li>
					{% endif %}
				</ul>
			</div>


			{#<div class="col-md-2 col-md-offset-4">#}
				{#<div class="stopka-webiso">#}
					{#<a title="Projekt i wykonanie - Webiso" href="http://www.webiso.pl"><span>WEB</span><span>ISO</span></a>#}
				{#</div>#}
			{#</div>#}

		</div>
	</footer>
	{#<div class=" container footer">#}
