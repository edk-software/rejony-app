{% raw %}
<script>
    var rplChartData = {
    labels: [{% endraw %}{{ labels | raw }} {% raw %}],
    datasets: [
{
    label: [{% endraw %}{{ labels | raw }} {% raw %}],
    backgroundColor: [{% endraw %}{{ colors | raw }} {% raw %}],
    strokeColor: "#00965a",
    pointColor: "#00a65a",
    pointStrokeColor: "#c1c7d1",
    pointHighlightFill: "#fff",
    pointHighlightStroke: "rgba(220,220,220,1)",
    data: [{% endraw %}{{ data | raw }} {% raw %}]
},
    ]
};

    var rplChartCanvas = $("#where-learnt").get(0).getContext("2d");
    var rplChartOptions = {
    segmentShowStroke: true,
    animateRotate : true,
    legendTemplate: "<ul class=\"line-legend\"><% for (var i=0; i<datasets.length; i++){%><li><span style=\"background-color:<%=datasets[i].fillColor%>\"></span><%if(datasets[i].label){%><%=datasets[i].label%><%}%></li><%}%></ul>",
    //Boolean - whether to make the chart responsive
    responsive: true,
    maintainAspectRatio: true,
    datasetFill: false
};

    var rplChart = new Chart(rplChartCanvas, {
    type: 'doughnut',
    data: rplChartData,
    options: rplChartOptions
});
</script>
{% endraw %}
