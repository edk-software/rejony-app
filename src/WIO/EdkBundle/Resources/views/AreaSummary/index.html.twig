{% extends 'CantigaCoreBundle:layout:list-layout.html.twig' %}

{% block data_filter %}
	{% include 'CantigaCoreBundle:Filter:area-filter.html.twig' with { 'filter': filter, 'filterForm': filterForm } only %}
{% endblock %}

{% block column_list %}
<tr>
	<th width="10" data-priority="1">#</th>
	<th data-priority="0">{{ 'Name' | trans }}</th>
	<th width="80" data-priority="2">{{ 'Status' | trans }}</th>
	<th width="80" data-priority="3">{{ 'Date' | trans }}</th>
	<th width="10" data-priority="3">{{ 'Contract' | trans }}</th>
	<th width="10" data-priority="3">{{ 'Stationary training' | trans([],'edk')}}</th>
	<th width="20" data-priority="3">{{ 'Online test' |  trans([],'edk') }}</i></th>
	<th width="10" data-priority="3">{{ 'Profile' | trans }}</th>
	<th width="10" data-priority="3">{{ 'Route Count' | trans([],'edk') }}</th>
	<th width="10" data-priority="3"></th>
	<th width="10" data-priority="3"></th>
	<th width="10" data-priority="3"></th>
	<th width="10" data-priority="3"></th>
	<th width="10" data-priority="3"></th>
	<th width="40" data-priority="0">{{ 'Actions' | trans({}, 'general') }}</th>
</tr>
{% endblock %}

{% block custom_datatable_config %}
	ajax: "{{ spath(ajaxListPage, filter.createParamArray()) | raw }}",
	columnDefs: [
		{{ dt_col_label(dataTable, 'status', 'statusName', 'statusLabel') }}
    	{{ dt_col_boolean(dataTable, 'contract') }}
    	{{ dt_col_boolean(dataTable, 'stationaryTraining') }}
    	{{ dt_col_icon(dataTable, 'gpsCount', 'fa fa-map-marker') }}
    	{{ dt_col_icon(dataTable, 'descriptionCount', 'fa fa-file-pdf-o') }}
    	{{ dt_col_icon(dataTable, 'mapCount', 'fa fa-map') }}
    	{{ dt_col_icon(dataTable, 'routesCertification', 'fa fa-star') }}
    	{{ dt_col_icon(dataTable, 'routesApproved', 'fa fa-check') }}
		{{ dt_actions(dataTable, [
			{ 'link': 'info_link', 'name': 'Info' | trans({}, 'general'), 'label': 'btn-primary' }
		]) }}
	]
{% endblock %}