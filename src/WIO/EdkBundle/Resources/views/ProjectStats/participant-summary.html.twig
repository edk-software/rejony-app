{% extends 'CantigaCoreBundle:layout:base-layout.html.twig' %}

{% block page_title %}
	{{ 'Participants' | trans({}, 'pages') }}
{% endblock %}

{% block page_subtitle %}
	{{ 'View participant progression per area summary' | trans({}, 'pages') }}
{% endblock %}

{% block page_content %}
	<div class="row">
		<div class="col-lg-12">
			<div class="box">
				<div class="box-body">
					<div class="table-responsive">
						<table class="table table-hover" style="width: {{ 100 + dataset.countTemporalDimension() * 90 }}px;">
							<thead>
								<tr>
									<th width="100">{{ 'Area' | trans }}</th>
									{% for label in dataset.getTemporalDimension() %}
									<th width="90">{{ label }}</th>
									{% endfor %}
								</tr>
							</thead>
							<tbody>
								{% for area in dataset.getCategoryDimension() %}
								<tr>
									<td class="text-bold"><a href="{{ spath(areaInfoPage, { 'id': area.id }) }}">{{ area.name }}</a></td>
									{% for point in dataset.getPointsFor(area.id) %}
									<td class="text-center">{{ point }}</td>
									{% endfor %}
								</tr>
								{% endfor %}
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock page_content %}

