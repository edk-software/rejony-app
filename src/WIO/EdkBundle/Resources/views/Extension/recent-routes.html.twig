<div class="col-lg-12">
	<div class="box box-solid">
		<div class="box-header with-border">
			<i class="fa fa-map-signs"></i>
			<h3 class="box-title">{{ 'Routes' | trans([], 'edk') }}</h3>
		</div>
		<div class="box-body no-padding">
			<table class="table table-hover">
				<tbody>
					{% for route in routes %}
					<tr>
						<td><a href="{{ spath(routeInfoPath, {'id': route.id} ) }}">{{ route.name }}</a></td>
						<td>{{ empty_boolean_mark(route.approved) }}</td>
						<td>{{ icon_color_mark(route.gps.ico, route.gps.textColor, route.gps.tooltip) }} {{ icon_color_mark(route.description.ico, route.description.textColor, route.description.tooltip) }} {{ icon_color_mark(route.map.ico, route.map.textColor, route.map.tooltip) }}</td>
						<td width="25%">{{ route.areaName }}</td>
						<td width="25%">{{ route.updatedAt }}</td>
					</tr>
					{% endfor %}
				</tbody>	
			</table>
		</div>
	</div>
</div>